<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Sunset" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowBackgroundBlurRadius">10dp</item>
    </style>

    <style name="Theme.Sunset" parent="Base.Theme.Sunset" />

    <style name="CustomAlertDialog">
        <!-- 꽉 채운 화면에 배경 없이 (custom view 영역만 보일 것이다.) -->

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>



        <!-- Dim 처리 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:colorBackground">@color/custom_red</item>
        <item name="android:windowCloseOnTouchOutside">true</item>


        <!-- Dialog 가 센터에 나오도록 하자. -->
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>